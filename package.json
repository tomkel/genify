{
  "name": "genify",
  "version": "1.0.0",
  "description": "Build spotify playlists from saved music based on their type and genre.",
  "main": "app/entry.tsx",
  "type": "module",
  "scripts": {
    "dev": "bun -b vite dev",
    "build": "bun -b vite build",
    "lint": "bun -b eslint . ; bun -b tsc",
    "clean": "rm -r node_modules dist ; bun i",
    "preview": "bun -b vite preview",
    "deploy": "bun -b run build && fish deploy.fish",
    "dev:bun": "NODE_ENV=development bun -b build app/entry.tsx --outfile dist/bundle.js --target browser --watch --sourcemap=external --outdir dist",
    "build:bun": "NODE_ENV=production bun -b build app/entry.tsx --outfile dist/bundle.js --target browser --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkel/genify.git"
  },
  "author": "Tommy Kelly",
  "license": "AGPL-3.0-or-later",
  "private": "true",
  "bugs": {
    "url": "https://github.com/tomkel/genify/issues"
  },
  "homepage": "https://github.com/tomkel/genify#readme",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource-variable/roboto-flex": "^5.0.15",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.15.15",
    "@mui/system": "^5.15.15",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/bun": "^1.1.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": ">=0.3.9 <1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-barrel-files": "^2.0.6",
    "eslint-plugin-import-x": ">=0.5.0 <1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": ">=0.4.6 <1",
    "lightningcss": "^1.25.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
