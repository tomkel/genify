{
  "name": "genify",
  "version": "1.0.0",
  "description": "Build spotify playlists from saved music based on their type and genre.",
  "main": "app/entry.tsx",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && vite build",
    "lint": "eslint . ; tsc --noEmit",
    "lint:vite": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 ; tsc --noEmit",
    "preview": "vite preview",
    "start:bun": "NODE_ENV=development bun build app/entry.tsx --outfile dist/bundle.js --target browser --watch --sourcemap=external --outdir dist",
    "build:bun": "NODE_ENV=production bun build app/entry.tsx --outfile dist/bundle.js --target browser --minify",
    "deploy": "npm run build && fish deploy.fish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkel/genify.git"
  },
  "author": "Tommy Kelly",
  "license": "UNLICENSED",
  "private": "true",
  "bugs": {
    "url": "https://github.com/tomkel/genify/issues"
  },
  "homepage": "https://github.com/tomkel/genify#readme",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.12",
    "@mui/icons-material": "^5.15.13",
    "@mui/material": "^5.15.13",
    "@mui/system": "^5.15.13",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "react": "18",
    "react-dom": "18",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "babel-loader": "9",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-barrel-files": "^1.0.5",
    "eslint-plugin-import-x": "^0.5.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.9",
    "webpack": "5",
    "webpack-cli": "5",
    "webpack-dev-server": "5"
  }
}
